#!/bin/bash
set -euo pipefail; IFS=$'\n\t'

FILE_NAME=$(date --iso-8601=minutes)-mysql-backup.sql.gz

# Dump and compress database, Upload backup file to AWS S3
nice -n 19 mysqldump --compress --single-transaction femiwiki | nice -n 19 gzip -9 | /usr/local/bin/aws s3 cp - "s3://femiwiki-backups/$FILE_NAME"
